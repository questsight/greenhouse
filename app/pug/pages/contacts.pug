              label(for='name') Ваше имя:
              input#name.form-control(type='name', name='name', placeholder='Name')
            .form-group
              label(for='email1') E-mail:
              input#email1.form-control(type='email', name='email', placeholder='Email')
            .form-group
              label(for='phone') Номер телефона:
              input#phone.form-control(type='phone', name='phone', placeholder='Phone')
            .form-group
              label(for='message') Сообщение:
              textarea.form-control(name='message', rows='3')
            button.button.button_bg_theme(type='submit') Отправить сообщение

