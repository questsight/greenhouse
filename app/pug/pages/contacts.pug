extends ../layouts/default.pug

block site-content
  section.section.page
    .section__header.page__header
      .section__title.page__title
        | Контакты
    .section__content.page__content.contacts__content
      .row
        .col-xs-12.col-sm-6
          .contacts__one
            p 105275, г.Москва, 8-я ул. Соколиной горы, д. 15
          .contacts__one
            p +7 (495) 226-01-49
          .contacts__one
            a.connect__email(href='mailto:info@palliative-2ikb.ru' target='_blank') info@palliative-2ikb.ru
          form.contacts__form(action='', method='post')
